<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.StatsFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/image_view_fragment_stats_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:src="@drawable/app_plus" />

            <TextView
                android:id="@+id/text_view_fragment_stats_item"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:gravity="center"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                tools:text="어 플 명" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="은(는) 제한 중인 어플입니다."
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="시간 초과 할 경우 앱 사용 제한합니다."
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="(초과 시 00시 이후 자동 초기화 됩니다.)"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="남은 시간"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_nam_h"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="@color/colorRed"
                    android:textSize="32sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/colorBlack"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/text_view_nam_m"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="@color/colorRed"
                    android:textSize="32sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/colorBlack"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/text_view_nam_s"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="@color/colorRed"
                    android:textSize="32sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="사용 시간"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_s_h"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:text="00"
                    android:textSize="32sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/colorBlack"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/text_view_s_m"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:text="00"
                    android:textSize="32sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/colorBlack"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/text_view_s_s"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:text="00"
                    android:textSize="32sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="전체 시간"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_a_h"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:text="00"
                    android:textSize="32sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/colorBlack"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/text_view_a_m"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:text="00"
                    android:textSize="32sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/colorBlack"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/text_view_a_s"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:text="00"
                    android:textSize="32sp" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>